{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "root": {
            "matchCondition": {
                "route": "/",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "%WebAppUrl[SITE]%index.html",
            "responseOverrides": {
                "response.headers.Strict-Transport-Security": "max-age=31536000; includeSubDomains",
                "response.headers.X-Content-Type-Options": "nosniff",
                "response.headers.X-XSS-Protection": "1; mode=block",
                "response.headers.x-frame-options": "SAMEORIGIN",
                "response.headers.Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;",
                "response.headers.Referrer-Policy": "same-origin",
                "response.headers.Feature-Policy": "payment 'self'; geolocation 'self'"
            }
        },    
        "files": {
            "matchCondition": {
                "route": "/{filename}.{ext}",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "%WebAppUrl[SITE]%{filename}.{ext}"
        },
        "routes": {
            "matchCondition": {
                "route": "/{*restOfPath}",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "%WebAppUrl[SITE]%index.html",
            "responseOverrides": {
                "response.headers.Strict-Transport-Security": "max-age=31536000; includeSubDomains",
                "response.headers.X-Content-Type-Options": "nosniff",
                "response.headers.X-XSS-Protection": "1; mode=block",
                "response.headers.x-frame-options": "SAMEORIGIN",
                "response.headers.Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;",
                "response.headers.Referrer-Policy": "same-origin",
                "response.headers.Feature-Policy": "payment 'self'; geolocation 'self'"
            }
        },
        "assets": {
            "matchCondition": {
                "route": "/assets/{file}",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "%WebAppUrl[SITE]%assets/{file}"
        },
        "site": {
            "matchCondition": {
                "route": "/site"
            },
            "responseOverrides": {
                "response.statusCode": "200",
                "response.statusReason": "OK",
                "response.headers.Content-Type": "text/html; charset=UTF-8",
                "response.body": "[SITE]"
            }
        }
    }
}